[DEFAULT]
transport_url = rabbit://<%= @service %>:<%= @password %>@<%= @rabbitmq_ip %>:5672/

log_dir = <%= @logs_dir %>/<%= @service %>

heat_metadata_server_url = http://<%= @management_ip %>/cloudformation
heat_waitcondition_server_url = http://<%= @management_ip %>/cloudformation/v1/waitcondition
stack_domain_admin = <%= @domain_admin %>
stack_domain_admin_password = <%= @domain_admin_pass %>
stack_user_domain_name = <%= @service %>

region_name_for_services = <%= @region %>


[auth_password]

[cache]
memcache_servers = localhost:11211
backend = dogpile.cache.memory
enabled = True


[clients]
[clients_aodh]
[clients_barbican]
[clients_cinder]
[clients_designate]
[clients_glance]
[clients_heat]


[clients_keystone]
auth_uri = http://<%= @management_ip %>/identity


[clients_magnum]
[clients_manila]
[clients_mistral]
[clients_monasca]
[clients_neutron]
[clients_nova]
[clients_octavia]
[clients_sahara]
[clients_senlin]
[clients_swift]
[clients_trove]
[clients_zaqar]


[cors]
allowed_origin = http://<%= @management_ip %>


[database]
connection = mysql+pymysql://<%= @service %>:<%= @password %>@<%= @dbhost %>/<%= @service %>?charset=utf8


[ec2authtoken]
[eventlet_opts]
[healthcheck]

[heat_api]
workers = 2


[heat_api_cfn]
[heat_api_cloudwatch]


[keystone_authtoken]
#cafile = /opt/stack/data/ca-bundle.pem
project_domain_name = Default
project_name = service
user_domain_name = Default
username = <%= @service %>
password = <%= @password %>
auth_url = http://<%= @management_ip %>/identity
www_authenticate_uri = http://<%= @management_ip %>/identity
auth_type = password
memcached_servers = <%= @memcached_ip %>:11211
region_name = <%= @region %>
service_token_roles_required = True


[noauth]
[oslo_messaging_amqp]
[oslo_messaging_kafka]


[oslo_messaging_notifications]
driver = messagingv2


[oslo_messaging_rabbit]
[oslo_middleware]
[oslo_policy]
[paste_deploy]
[profiler]
[revision]
[ssl]


[trustee]
auth_type = password
auth_url = http://<%= @management_ip %>/identity
username = <%= @service %>
password = <%= @password %>
user_domain_name = Default


[volumes]
backups_enabled = false